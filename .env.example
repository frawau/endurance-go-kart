# Database Configuration
POSTGRES_USER=gokart
POSTGRES_PASSWORD=gokart
POSTGRES_DB=gokart

# Django Admin User (created automatically on first run)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=admin

# Security Keys - GENERATE YOUR OWN!
# Run: ./race-manager.sh generate-secret
SECRET_KEY=your-django-secret-key-change-this-to-something-random-and-secure
STOPANDGO_HMAC_SECRET=your-hmac-secret-for-station-security-also-change-this
TIMING_HMAC_SECRET=your-timing-hmac-secret-optional-defaults-to-stopandgo-secret

# Domain and Port Configuration
APP_HOSTNAME=localhost
APP_PORT=5085
# EXTRA_ALLOWED_HOST=192.168.x.x  # Additional IP/hostname for Django ALLOWED_HOSTS

# SSL Configuration (uncomment and configure for SSL support)
# SSL_MODE=none              # none|letsencrypt|acme|manual
# SSL_EMAIL=admin@your-domain.com
#
# For manual SSL mode (when SSL_MODE=manual)
# SSL_CERT_PATH=./ssl/fullchain.pem
# SSL_KEY_PATH=./ssl/privkey.pem
#
# For acme.sh mode (when SSL_MODE=acme or letsencrypt)
# ACME_CHALLENGE=http

# Stop & Go Station (standalone Raspberry Pi)
# STOPANDGO_PORT=8000
# STOPANDGO_SECURE=false
# STOPANDGO_LOG_LEVEL=INFO           # DEBUG|INFO|WARNING|ERROR

# Timing Station (enable with: ./race-manager enable-timing)
# TIMING_STATION_ENABLED=false
# TIMING_PLUGIN_TYPE=simulator     # simulator|tag|nettag
# TIMING_MODE=duration             # interval|duration|time_of_day|own_time
# TIMING_ROLLOVER_SECONDS=360000.0
# TIMING_SIM_TRANSPONDERS=10
# TIMING_SIM_LAP_MIN=45.0
# TIMING_SIM_LAP_MAX=75.0
# TIMING_TAG_DEVICE=/dev/ttyUSB0
# TIMING_TAG_BAUD=9600
# TIMING_TAG_ENDIAN=normal
# TIMING_NETTAG_HOST=192.168.0.11
# TIMING_NETTAG_PORT=2009
# TIMING_NETTAG_PROTOCOL=udp

# Timezone for all containers
TZ=UTC
